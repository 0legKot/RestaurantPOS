@model OrderHistory
@{
    ViewData["Title"] = "OrderHistory";
}
<style>
    .grid-container {
        display: grid;
        grid-template-columns: auto auto auto;
        background-color:   #2196F3;
        padding: 10px;
    }

    .grid-item {
        background-color: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(0, 0, 0, 0.8);
        padding: 20px;
        font-size: 30px;
        text-align: center;
    }
        .grid-item.Active {
            background-color: orange;
        }

        .grid-item.Voided {
            background-color: gray;
        }

        .grid-item.Paid {
            background-color: lawngreen;
        }

        .grid-item.Ready {
            background-color: red;
        }
</style>
<h2>OrderHistory</h2>
<div class="grid-container">
    @foreach (OrderInfo info in Model.GetOrders())
    {
    <div 
         class="grid-item @info.Order.State.ToString()" onclick="location.href='View?OrderInfoId=@info.Id'">

        <p> Table id: @info.TableId</p>
        <p></p>
        @*<p>Table row: @info.Table.Row</p>*@
        @*<p>Table column: @info.Table.Column</p>*@

        @foreach (int seat in info.TableSeatsNumbers)
        {
        <p>Seat: @seat</p>
        @*<p>Seat id: @seat.Id</p>*@
}
        <p> Order Id:  @info.Order.Id</p>
        @info.Order.State
    </div>
    }

</div>