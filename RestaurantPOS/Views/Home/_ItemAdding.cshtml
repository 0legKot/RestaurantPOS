<style>
    .addItem {
        display: inline-block;
        max-width:600px;
        text-align: left;
    }
</style>
<form method="post" action="/CreateItem" class="form-group ">
    <input type="hidden" value="@ViewBag.row" name="row" />
    <input type="hidden" value="@ViewBag.column" name="column" />
    <input type="hidden" value="@ViewBag.curSeat" name="seat" />
    <div class="table table-bordered addItem">
        
            
            <label for="name" class="addItem">
                Item name:
            </label>

            <input name="name" id="name" required />

            <label for="price">
                Item price:
            </label>
            <input type="number" value="1" step="0.01" min="1" max="9999" name="price" id="price" />
            <input type="submit" class="btn btn-primary" value="Add" />
        
    </div>
  
</form>