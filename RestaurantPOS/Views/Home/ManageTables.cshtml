@model Restaurant
@{
    ViewData["Title"] = "ManageTables";
}
<style>
    .mybg {
        background-image: url('/images/GridBackground.jpg');
    }
</style>
<h2>Manage tables</h2>

<table background="images/GridBackground.jpg" class="table table-responsive mybg" cellpadding="0" cellspacing="0">
    @for (int i = 0; i < Model.Rows; i++)
    {
        <tr>
            @for (int j = 0; j < Model.Columns; j++)
            {

                @if (Model.TablesGrid[i, j] != null)
                {
                    <td width="100/@Model.Columns%" height="100%"
                        onclick="location.href='AddTable?row=@i&column=@j'">
                        @await Html.PartialAsync("_TableItem", @Model.TablesGrid[i, j])
                    </td>
                }
                else
                {
                    <td onclick="location.href='AddTable?row=@i&column=@j'"></td>
                }


            }
        </tr>
    }
</table>


